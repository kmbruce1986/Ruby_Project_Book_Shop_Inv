<h1>All Authors</h1>

<button onclick="location.href= '/authors/search'"type="button" name="button">Search Authors</button>

<table>
  <% @authors.each do |author| %>
  <tr>
    <th>Name:</th>
    <td><%= author.name %></td>
    <td><a href="/authors/<%= author.id %>"> Show Full Author Details </a></td>
  </tr>
  <% end %>
</table>
