  <input id="first-name" type="text" name="first_name" value="<%= @authors.first_name  %>"required>

  <label for="last-name"> Last Name: </label>
  <input id="last-name" type="text" name="last_name" value="<%= @authors.last_name  %>"required>

  <input type="submit" value="Update">
</form>
