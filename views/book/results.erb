<h1>Search Results</h1>
<% if @books.length != 0 %>
<table>
  <th>Title</th>
  <% @books.each do |book| %>
  <tr><td><a href="/books/<%= book.id %>"><%= book.title %></a>   </td>
  <% end %>
  <% else %>
  <p>There are no Books containing the term(s) <%= params[:search] %>.</p>
  <% end %>
</table>
