<h1>Edit Book</h1>
<form action="/books/<%= @books.id %>/update" method="post">
<table>
<tr>
  <th><label for="title"> Title: </label></th>
  <th><input id="title" type="text" name="title" value="<%= @books.title  %>"required></th>
</tr>

<tr>
  <th><label for="genre"> Genre: </label></th>
  <th>  <input id="genre" type="text" name="genre" value="<%= @books.genre  %>" required></th>
</tr>

<tr>
  <th><label for="author"> Author: </label></th>
  <th>    <select id="author" name="author_id">
        <% @authors.each do |author|%>
        <option value="<%= author.id.to_i %>"><%= author.name %></option>
        <% end %>
      </select></th>
</tr>

<tr>
  <th><label for="description"> Blurb: </label></th>
  <th><input id="description" type="text" name="description" value="<%= @books.description  %>" size="100" required></th>
</tr>

<tr>
  <th><label for="quantity"> Quantity: </label></th>
  <th><input id="quantity" type="text" name="quantity" value="<%= @books.quantity  %>" required></th>
</tr>

<tr>
  <th><label for="cost_price"> Cost Price: </label></th>
  <th><input id="cost_price" type="text" name="cost_price" value="<%= @books.cost_price  %>" required></th>
</tr>

<tr>
  <th><label for="selling_price"> Selling Price: </label></th>
  <th><input id="selling_price" type="text" name="selling_price" value="<%= @books.selling_price  %>" required></th>
</tr>
<tr>
  <th></th>
  <th><button class="myButton_update" type="submit" value="Save Changes">Save Changes</button></th>
</tr>


</table>
</form>

